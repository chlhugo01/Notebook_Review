<%- include("../partials/header") %>
<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-10">
            <h1>Create a New notebook</h1>
            <form action="/notebook" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Topic</label>
                    <input type="text" class="form-control" name="notebook[topic]">
                </div>
                <div class="form-group">
                    <label>Introduction</label>
                    <input type="text" class="form-control" name="notebook[introduction]">
                </div>
                <div class="form-group">
                    <label>Image</label>
                    <input type="file" class="form-control-file" name="image">
                </div>
                <div class="form-group">
                    <label>Price</label>
                    <input type="number" class="form-control" name="notebook[price]">
                </div>
                <div class="form-group">
                    <label>Rating 1-5</label>
                    <input type="number" class="form-control" name="notebook[rating]">
                </div>
                <div class="form-group" style="height: 250%">
                    <label>Description</label>
                    <textarea type="text" class="form-control" name="notebook[description]"  rows="6"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <a href="/notebook">Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>