<%- include("../partials/header") %>
<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-10">
            <h1>Edit</h1>
            <form action="/notebook/<%=notebook._id%>/?_method=PUT" method="POST" >
                <div class="form-group">
                    <label>Topic</label>
                    <input type="text" class="form-control" name="notebook[topic]" value="<%= notebook.topic %>">
                </div>
                <div class="form-group">
                    <label>Introduction</label>
                    <input type="text" class="form-control" name="notebook[introduction]"
                        value="<%= notebook.introduction %>">
                </div>
                <div class="form-group">
                    <label>Price</label>
                    <input type="number" class="form-control" name="notebook[price]" value="<%= notebook.price %>">
                </div>
                <div class="form-group">
                    <label>Rating 1-5</label>
                    <input type="number" class="form-control" name="notebook[rating]"
                        value="<%= notebook.rating %>">
                </div>
                <div class="form-group" style="height: 250%">
                    <label>Description</label>
                    <textarea type="text" class="form-control" name="notebook[description]" rows="10"><%=notebook.description%></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <a href="/notebook">Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>